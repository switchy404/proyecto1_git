import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

df = pd.read_csv("SeoulBikeData_utf8.csv")

# 1. Propuesta Grupal
# DeQu, añade aquí porfavor la propuesta que planteaste

# Análisis de datos, by Nicolás Yépez Obando

stats = df.describe()
print(stats)

### Para los histogramas

plt.hist(df["¿Qué variable?"], bins=45, edgecolor='black')
plt.title(f"Histograma de {Variable}.")
plt.xlabel("Valores")
plt.ylabel("Frecuencia")
plt.show()

### Para los diagramas de caja

sns.boxplot(x=df["¿Qué variable?"])
plt.title(f"Diagrama de caja de {Variable}")
plt.show()

### Para los diagramas de dispersión

plt.scatter(df["¿Qué variable? (X)"], df["¿Qué variable? (Y)"])
plt.title(f"Diagrama de dispersión entre {"¿Qué variable? (X)"} y {"¿Qué variable? (Y)"}.")
plt.xlabel("¿Qué variable? (X)")
plt.ylabel("¿Qué variable? (Y)")
plt.show()

### Para diagramas de violín

sns.violinplot(x=df["¿Qué variable?"])
plt.title('Diagrama de violín de tu_variable')
plt.show()
